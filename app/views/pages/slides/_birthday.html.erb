<div class="col-lg-12">
    <% if @multiple_birthdays == true %>
        <% @person.each do |x|%>
        <div class="col-lg-6">
            <div class="widget-head-color-box navy-bg p-lg text-center">
                <div class="m-b-md">
                    <h3 class="font-bold no-margins">
                        Happy Birthday
                    </h3></br>
                    <% if x["image"] == 0 %>
                        <img alt="blank image" class="img-circle circle-border m-b-md center-block" src="<%= image_path('blank_profile.jpg') %>">
                    <% else %>
                        <img alt="<%= x['first_name'] %>" class="img-circle circle-border m-b-md center-block" src="<%= image_url(x["image"]) %>">
                    <% end %>
                    <h2><%= x['first_name'] %></h2>
                </div>
            </div>
        </div>
        <% end %>
    <% elsif @birthday_today == true %>
        <div class="widget-head-color-box navy-bg p-lg text-center">
            <div class="m-b-md">
                <h3 class="font-bold no-margins">
                    Happy Birthday
                </h3>
                <h2 class="font-bold no-margins"><%= @person[0]["first_name"] %>!</h2>
                <small><%= Date.strptime(@person[0]["birthday"],"%m/%d/%y").strftime("%B") %> <%= Date.strptime(@person[0]["birthday"],"%m/%d/%y").strftime("%d").to_i.ordinalize %></small>
            </div>
            <div class="col-lg-4 col-lg-offset-4">
                <% if @person[0]["image"] == 0 %>
                    <img alt="image" class="img-circle center-block" src="<%= image_path('blank_profile.jpg') %>">
                <% elsif @person[0]["image"].include? "http"  %>
                    <img alt="image" class="img-circle center-block" src="<%= image_url(@person[0]["image"]) %>">
                <% else %>
                    <img alt="image" class="img-circle center-block" src="<%= image_path(@person[0]["image"]) %>">
                <% end %>
            </div>
        </div>
    <% else %>
        <h2>This Months Birthdays</h2>
            <% @this_months_birthdays.each do |b| %>
                <p></p>
                <div class="col-md-4">
                        <div class="ibox-content text-center">
                            <h1><%= b[0]["first_name"] %> <%= b[0]["last_name"] %></h1>
                            <div class="m-b-sm">
                                <% if b[0]["image"] == 0 %>
                                    <img alt="image" class="img-circle center-block" src="<%= image_path('blank_profile.jpg') %>">
                                <% elsif b[0]["image"].include? "http"  %>
                                    <img alt="image" class="img-circle center-block" src="<%= image_url(b[0]["image"]) %>">
                                <% else %>
                                    <img alt="image" class="img-circle center-block" src="<%= image_path(b[0]["image"]) %>">
                                <% end %>
                            </div>
                            <p class="font-bold"><%= Date.strptime(b[0]["birthday"],"%m/%d/%y").strftime("%B") %> <%= Date.strptime(b[0]["birthday"],"%m/%d/%y").strftime("%d").to_i.ordinalize %> </p>
                            <!--Date.strptime(b[1]["birthday"],"%m/%d/%y").strftime("%d").to_i.ordinalize-->
                        </div>
                    </div>
            <% end %>
    <% end %>
    
</div>